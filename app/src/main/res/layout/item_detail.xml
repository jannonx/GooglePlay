<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">
    <!--应用的下载部分-->
    <FrameLayout
        android:id="@+id/fl_appdetail_download"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true">

    </FrameLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/fl_appdetail_download">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <!--应用的信息部分-->
            <FrameLayout
                android:id="@+id/fl_appdetail_info"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

            </FrameLayout>
            <!--应用的安全部分-->
            <FrameLayout
                android:id="@+id/fl_appdetail_safe"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:background="#ffffff">

            </FrameLayout>
            <!--应用的截图部分-->
            <FrameLayout
                android:id="@+id/fl_appdetail_pic"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp">

            </FrameLayout>
            <!--应用的描述部分-->
            <FrameLayout
                android:id="@+id/fl_appdetail_des"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp">

            </FrameLayout>
        </LinearLayout>
    </ScrollView>


</RelativeLayout>